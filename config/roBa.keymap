#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

// #includeのあとのあたりにスクロール量変更の定義を追記

#define ZMK_POINTING_DEFAULT_SCRL_VAL 80

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
};

&trackball {
    automouse-layer = <4>;
    scroll-layers = <5>;

    // arrows {
    //     layers = <3>;
    //     bindings =
    //         <&kp RIGHT_ARROW>,
    //         <&kp LEFT_ARROW>,
    //         <&kp UP_ARROW>,
    //         <&kp DOWN_ARROW>;
    //     tick = <10>;
    //     wait-ms = <5>;
    //     tap-ms = <5>;
    // };
};

/ {
    combos {
        compatible = "zmk,combos";

        tab {
            bindings = <&kp TAB>;
            key-positions = <1 0>;
        };

        shift_tab {
            bindings = <&kp LS(TAB)>;
            key-positions = <1 2>;
        };

        double_quotation {
            bindings = <&kp SEMICOLON>;
            key-positions = <20 21>;
        };

        mouse_gesture_like_trackpad {
            bindings = <&custom_mouse_hold_tap 5 MB2>;
            key-positions = <19 18>;
        };

        mouse_gesture_like_trackpad_lft {
            bindings = <&custom_mouse_hold_tap 5 MB2>;
            key-positions = <13 12>;
        };

        go_to_controls_layer_right {
            bindings = <&mo 7>;
            key-positions = <40 41>;
        };

        go_to_controls_layer_left {
            bindings = <&mo 7>;
            key-positions = <38 37>;
        };

        go_to_controls_layer_right_2 {
            bindings = <&mo 7>;
            key-positions = <41 28>;
        };

        go_to_bluetooth_layer {
            bindings = <&mo 6>;
            key-positions = <26 27>;
        };
    };

    macros {
        to_layer_0: to_layer_0 {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings = <&to 0 &macro_param_1to1 &kp MACRO_PLACEHOLDER>;
            label = "TO_LAYER_0";
        };
    };

    behaviors {
        // combosやmacrosと同じ階層に以下のbihaviorsを追記
        // スクロール方向を逆にしたい場合は <&msc SCRL_DOWN> と <&msc SCRL_UP> を入れ替えてください

        encoder_msc_down_up: encoder_msc_down_up {
            compatible = "zmk,behavior-sensor-rotate";
            label = "ENCODER_MSC_DOWN_UP";
            #sensor-binding-cells = <0>;
            bindings = <&msc SCRL_UP>, <&msc SCRL_DOWN>;

            tap-ms = <20>;
        };

        lt_to_layer_0: lt_to_layer_0 {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TO_0";
            bindings = <&mo>, <&to_layer_0>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        custom_mouse_hold_tap: custom_mouse_hold_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "CUSTOM_MOUSE_HOLD_TAP";
            bindings = <&mo>, <&mkp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&mt ESCAPE Q            &kp W               &kp E         &kp R                   &kp T                                                      &kp Y        &kp U  &kp I      &kp O    &kp P
&mt LEFT_COMMAND A      &mt LEFT_COMMAND S  &kp D         &kp F                   &kp G          &mkp MB1                    &kp UP_ARROW    &kp H        &kp J  &kp K      &kp L    &mt LEFT_COMMAND SQT
&mt LEFT_SHIFT Z        &mt LEFT_SHIFT X    &kp C         &kp V                   &kp B          &mt ENTER TAB               &kp DOWN_ARROW  &kp N        &kp M  &kp COMMA  &kp DOT  &mt LEFT_SHIFT SLASH
&mt LEFT_CONTROL LANG2  &kp LEFT_COMMAND    &kp LEFT_ALT  &lt_to_layer_0 1 LANG2  &kp BACKSPACE  &lt_to_layer_0 1 SPACE      &kp ENTER       &lt 1 LANG1                             &mt LEFT_CONTROL LANG1
            >;

            // この記述をmscに設定する

            sensor-bindings = <&encoder_msc_down_up>;
        };

        FUNCTION {
            bindings = <
&kp NUMBER_1  &kp NUMBER_2    &kp NUMBER_3    &kp NUMBER_4  &kp N5                                              &kp N7  &kp N8    &kp N9            &kp N0             &kp MINUS
&trans        &kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW  &kp NUMBER_6      &kp LEFT_ARROW   &kp F7  &mkp MB1  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp EQUAL
&trans        &kp HOME        &kp PAGE_UP     &kp END       &trans           &kp NUMBER_6      &kp RIGHT_ARROW  &trans  &trans    &kp SEMICOLON     &kp GRAVE          &kp NON_US_BACKSLASH
&trans        &trans          &kp PAGE_DOWN   &trans        &trans           &trans            &trans           &trans                                                 &trans
            >;

            // この記述をmscに設定する

            sensor-bindings = <&encoder_msc_down_up>;
        };

        NUM {
            bindings = <
&kp MINUS                   &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp PLUS                                                   &kp CARET         &kp AMPERSAND      &kp TILDE       &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
&kp SLASH                   &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp ASTERISK  &kp LC(LA(KP_NUMBER_0))      &kp UNDERSCORE  &kp EXCLAMATION   &kp AT_SIGN        &kp HASH        &kp DOLLAR            &kp PERCENT
&mt LEFT_SHIFT KP_NUMBER_0  &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp PERIOD    &kp EQUAL                    &trans          &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp LEFT_BRACE  &kp RIGHT_BRACE       &kp BACKSLASH
&trans                      &trans           &trans           &trans           &trans        &trans                       &trans          &trans                                                                     &kp PIPE
            >;

            // この記述をmscに設定する

            sensor-bindings = <&encoder_msc_down_up>;
        };

        ARROW {
            bindings = <
&kp ESCAPE      &kp LC(LS(TAB))         &kp UP_ARROW    &kp LC(TAB)              &trans                       &trans  &trans  &trans  &trans  &trans
&kp HOME        &kp LEFT_ARROW          &kp DOWN_ARROW  &kp RIGHT_ARROW          &kp END  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&kp LEFT_SHIFT  &kp LG(LS(LEFT_ARROW))  &trans          &kp LG(LS(RIGHT_ARROW))  &trans   &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans          &trans                  &trans          &trans                   &trans   &trans      &trans  &trans                          &trans
            >;

            // この記述をmscに設定する

            sensor-bindings = <&encoder_msc_down_up>;
        };

        MOUSE {
            bindings = <
&trans  &trans  &trans  &trans  &trans                      &trans  &trans    &trans    &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &mkp MB1  &mkp MB2  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans    &trans    &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans                              &trans
            >;

            // この記述をmscに設定する

            sensor-bindings = <&encoder_msc_down_up>;
        };

        SCROLL {
            bindings = <
&kp F1              &kp F2              &kp F3            &kp F4               &kp F5                                            &kp F7  &kp F8  &kp F9  &kp F10  &kp F11
&trans              &trans              &trans            &trans               &kp F6                &trans              &trans  &trans  &trans  &trans  &trans   &kp F12
&kp LC(LEFT_ARROW)  &kp LC(DOWN_ARROW)  &kp LC(UP_ARROW)  &kp LC(RIGHT_ARROW)  &kp LG(LS(NUMBER_4))  &kp LG(LS(N5))      &trans  &trans  &trans  &trans  &trans   &trans
&trans              &trans              &trans            &trans               &trans                &trans              &trans  &trans                           &trans
            >;

            sensor-bindings = <&encoder_msc_down_up>;
        };

        bluetooth_layer {
            bindings = <
&trans  &trans        &trans        &trans        &trans                           &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&trans  &trans        &trans        &trans        &trans  &trans      &trans       &trans        &trans        &trans        &trans        &trans
&trans  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &trans  &trans      &bootloader  &trans        &trans        &trans        &trans        &bt BT_CLR
&trans  &trans        &trans        &trans        &trans  &trans      &trans       &trans                                                  &bt BT_CLR_ALL
            >;

            // この記述をmscに設定する

            sensor-bindings = <&encoder_msc_down_up>;
        };

        controls_layer {
            bindings = <
&kp F1              &kp F2              &kp F3            &kp F4                &kp F5                              &kp F7  &kp F8  &kp F9  &kp F10  &kp F11
&trans              &trans              &trans            &kp LG(LS(NUMBER_4))  &kp F6          &trans      &trans  &trans  &trans  &trans  &trans   &kp F12
&kp LC(LEFT_ARROW)  &kp LC(DOWN_ARROW)  &kp LC(UP_ARROW)  &kp LC(RIGHT_ARROW)   &kp LG(LS(N5))  &trans      &trans  &trans  &trans  &trans  &trans   &trans
&trans              &trans              &trans            &trans                &trans          &trans      &trans  &trans                           &trans
            >;

            sensor-bindings = <&encoder_msc_down_up>;
        };
    };
};
